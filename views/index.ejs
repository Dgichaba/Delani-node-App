  <!-- Contact Section -->
  <div class="contact">
    <h2>CONTACT US</h2>
    <form>
      <div class="contact-form">
        <div class="row">
          <div class="col-4 pl-2 pb-2">
            <input type="text" class="form-control" id="name" placeholder="Name..." value="" required>
          </div>
          <div class="col-4 pl-2 pb-2">
            <input type="email" class="form-control" id="email" placeholder="Email..." value="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <textarea class="form-control" rows="8" id="message" placeholder="Your message here..." required></textarea>
